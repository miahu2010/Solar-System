    <div id="canvas-container"></div>

    <div id="ui-container">
        <h2>æ˜Ÿé™…ç²’å­ç³»ç»Ÿ</h2>
        
        <div class="control-group">
            <label>é€‰æ‹©å¤©ä½“</label>
            <div class="planet-grid" id="planet-selector">
                </div>
        </div>

        <div class="control-group">
            <label>ç²’å­é¢œè‰²</label>
            <input type="color" id="color-picker" value="#ffffff">
        </div>
        
        <div style="font-size: 0.8rem; color: #666; line-height: 1.4;">
            äº¤äº’è¯´æ˜:<br>
            ğŸ‘‹ <b>å·¦å³ç§»åŠ¨æ‰‹æŒ:</b> ç§»åŠ¨æ˜Ÿçƒ<br>
            ğŸ‘ <b>åŒæ‰‹å¼ å¼€/åˆæ‹¢:</b> æ§åˆ¶å¤§å°/çˆ†ç‚¸
        </div>
    </div>

    <div id="status">æ­£åœ¨åˆå§‹åŒ–æ‘„åƒå¤´ä¸AIæ¨¡å‹...</div>
    <button id="fullscreen-btn" onclick="toggleFullScreen()">â›¶</button>

    <script>
        // ================= é…ç½®æ•°æ® =================
        const planets = [
            { name: 'Sun', color: '#FDB813', size: 2.5 },
            { name: 'Mercury', color: '#A57C5B', size: 0.8 },
            { name: 'Venus', color: '#E3BB76', size: 1.2 },
            { name: 'Earth', color: '#22A6F2', size: 1.3 },
            { name: 'Mars', color: '#DF4925', size: 1.0 },
            { name: 'Jupiter', color: '#C88B3A', size: 2.2 },
            { name: 'Saturn', color: '#C5AB6E', size: 2.0 },
            { name: 'Uranus', color: '#4FD0E7', size: 1.8 },
            { name: 'Neptune', color: '#3E54E8', size: 1.8 }
        ];

        // ================= Three.js åˆå§‹åŒ– =================
        const scene = new THREE.Scene();
        // æ·»åŠ ä¸€äº›ç¯å¢ƒé›¾ï¼Œå¢åŠ æ·±ç©ºæ„Ÿ
        scene.fog = new THREE.FogExp2(0x000000, 0.02);

        const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
        camera.position.z = 5;

        const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        document.getElementById('canvas-container').appendChild(renderer.domElement);

        // --- ç²’å­ç³»ç»Ÿæ ¸å¿ƒ ---
        let particleSystem;
        let originalPositions; // å­˜å‚¨åŸå§‹ä½ç½®ç”¨äºå¤åŸ
        const particleCount = 6000;
        
        function createPlanet(colorHex, baseSize) {
            if(particleSystem) scene.remove(particleSystem);

            const geometry = new THREE.BufferGeometry();
            const positions = new Float32Array(particleCount * 3);
            originalPositions = new Float32Array(particleCount * 3);

            const color = new THREE.Color(colorHex);

            for(let i = 0; i < particleCount; i++) {
                // åœ¨çƒä½“è¡¨é¢éšæœºåˆ†å¸ƒç‚¹
                const theta = Math.random() * Math.PI * 2;
                const phi = Math.acos((Math.random() * 2) - 1);
                // æ·»åŠ ä¸€äº›éšæœºåŠå¾„å˜åŒ–ï¼Œä½¿è¾¹ç¼˜æ›´åƒæ°”ä½“/ç²’å­
                const r = baseSize * (0.95 + Math.random() * 0.1); 

                const x = r * Math.sin(phi) * Math.cos(theta);
                const y = r * Math.sin(phi) * Math.sin(theta);
                const z = r * Math.cos(phi);

                positions[i*3] = x;
                positions[i*3+1] = y;
                positions[i*3+2] = z;

                originalPositions[i*3] = x;
                originalPositions[i*3+1] = y;
                originalPositions[i*3+2] = z;
            }

            geometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));

            const material = new THREE.PointsMaterial({
                color: color,
                size: 0.04,
                transparent: true,
                opacity: 0.8,
                blending: THREE.AdditiveBlending, // å‘å…‰æ•ˆæœ
            });

            particleSystem = new THREE.Points(geometry, material);
            scene.add(particleSystem);
            
            // æ›´æ–° UI é¢œè‰²é€‰æ‹©å™¨
            document.getElementById('color-picker').value = colorHex;
        }

        // åˆå§‹åŒ–èƒŒæ™¯æ˜Ÿæ˜Ÿ
        function addStars() {
            const starGeo = new THREE.BufferGeometry();
            const starPos = [];
            for(let i=0; i<1000; i++) {
                starPos.push((Math.random() - 0.5) * 50);
                starPos.push((Math.random() - 0.5) * 50);
                starPos.push((Math.random() - 0.5) * 50);
            }
            starGeo.setAttribute('position', new THREE.Float32BufferAttribute(starPos, 3));
            const starMat = new THREE.PointsMaterial({color: 0xffffff, size: 0.05, transparent: true, opacity: 0.5});
            const stars = new THREE.Points(starGeo, starMat);
            scene.add(stars);
        }
        addStars();

        // é»˜è®¤åˆå§‹åŒ–å¤ªé˜³
        createPlanet(planets[0].color, planets[0].size);

        // ================= UI é€»è¾‘ =================
        const planetSelector = document.getElementById('planet-selector');
        
        planets.forEach(p => {
            const btn = document.createElement('button');
            btn.className = 'planet-btn';
            btn.innerText = p.name;
            btn.onclick = () => {
                document.querySelectorAll('.planet-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                createPlanet(p.color, p.size);
            };
            planetSelector.appendChild(btn);
        });

        // é¢œè‰²é€‰æ‹©å™¨ç›‘å¬
        document.getElementById('color-picker').addEventListener('input', (e) => {
            if(particleSystem) particleSystem.material.color.set(e.target.value);
        });

        // å…¨å±é€»è¾‘
        function toggleFullScreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen();
            } else {
                if (document.exitFullscreen) document.exitFullscreen();
            }
        }

        // ================= MediaPipe æ‰‹åŠ¿è¯†åˆ«é€»è¾‘ =================
        const videoElement = document.getElementById('input_video');
        const statusElement = document.getElementById('status');
        
        // ç”¨äºå¹³æ»‘è¿åŠ¨çš„å˜é‡
        let targetScale = 1;
        let currentScale = 1;
        let targetX = 0;
        let currentX = 0;

        function onResults(results) {
            statusElement.innerText = "ç³»ç»Ÿè¿è¡Œä¸­ - è¯·å°è¯•ç§»åŠ¨åŒæ‰‹";
            statusElement.style.color = "#4FD0E7";

            if (results.multiHandLandmarks && results.multiHandLandmarks.length > 0) {
                const landmarks = results.multiHandLandmarks;
                
                // 1. ä½ç½®æ§åˆ¶ (Swipe Left/Right)
                // è®¡ç®—æ‰€æœ‰æ£€æµ‹åˆ°çš„æ‰‹çš„ä¸­å¿ƒç‚¹ X åæ ‡
                let avgX = 0;
                landmarks.forEach(hand => {
                    avgX += hand[9].x; // ä½¿ç”¨ä¸­æŒ‡æ ¹éƒ¨ä½œä¸ºæ‰‹çš„ä¸­å¿ƒ
                });
                avgX /= landmarks.length;

                // MediaPipe x åæ ‡æ˜¯ 0-1 (å·¦åˆ°å³)ï¼Œéœ€è¦æ˜ å°„åˆ° Three.js åæ ‡
                // æ³¨æ„ï¼šæ‘„åƒå¤´é€šå¸¸æ˜¯é•œåƒçš„ï¼Œæ‰€ä»¥ 1-x
                const screenX = (1 - avgX) * 2 - 1; // æ˜ å°„åˆ° -1 åˆ° 1
                targetX = screenX * 4; // ä¹˜æ•°å†³å®šç§»åŠ¨çµæ•åº¦

                // 2. ç¼©æ”¾/æ‰©æ•£æ§åˆ¶ (Hands Open/Close)
                if (landmarks.length === 2) {
                    // å¦‚æœæœ‰ä¸¤åªæ‰‹ï¼Œè®¡ç®—ä¸¤åªæ‰‹è…•çš„è·ç¦»
                    const hand1 = landmarks[0][0]; // 0 æ˜¯æ‰‹è…•ç‚¹
                    const hand2 = landmarks[1][0];
                    
                    const dist = Math.sqrt(
                        Math.pow(hand1.x - hand2.x, 2) + 
                        Math.pow(hand1.y - hand2.y, 2)
                    );

                    // æ˜ å°„è·ç¦»åˆ°ç¼©æ”¾æ¯”ä¾‹ (è·ç¦»0.1 -> 1.0, è·ç¦»0.8 -> 3.0)
                    targetScale = 0.5 + (dist * 4);
                } else {
                    // å•æ‰‹æ—¶ï¼Œæ¢å¤é»˜è®¤ç¼©æ”¾æˆ–åŸºäºæ‰‹æŒ‡å¼ å¼€ç¨‹åº¦ï¼ˆè¿™é‡Œç®€åŒ–ä¸ºæ¢å¤ï¼‰
                    targetScale = 1;
                }
            } else {
                // æ²¡æœ‰æ£€æµ‹åˆ°æ‰‹ï¼Œç¼“æ…¢å¤ä½
                targetScale = 1;
                targetX = 0;
                statusElement.innerText = "æœªæ£€æµ‹åˆ°æ‰‹éƒ¨";
                statusElement.style.color = "#aaa";
            }
        }

        const hands = new Hands({locateFile: (file) => {
            return `https://cdn.jsdelivr.net/npm/@mediapipe/hands/${file}`;
        }});

        hands.setOptions({
            maxNumHands: 2,
            modelComplexity: 1,
            minDetectionConfidence: 0.5,
            minTrackingConfidence: 0.5
        });

        hands.onResults(onResults);

        const cameraUtils = new Camera(videoElement, {
            onFrame: async () => {
                await hands.send({image: videoElement});
            },
            width: 640,
            height: 480
        });
        
        // å¯åŠ¨æ‘„åƒå¤´
        cameraUtils.start().catch(err => {
            statusElement.innerText = "æ‘„åƒå¤´è®¿é—®å¤±è´¥ï¼Œè¯·ç¡®ä¿ä½¿ç”¨HTTPSæˆ–æœ¬åœ°æœåŠ¡";
            console.error(err);
        });


        // ================= æ¸²æŸ“å¾ªç¯ =================
        function animate() {
            requestAnimationFrame(animate);

            if (particleSystem) {
                // 1. è‡ªèº«æ—‹è½¬
                particleSystem.rotation.y += 0.002;

                // 2. å¹³æ»‘æ’å€¼ (Lerp) å¤„ç†æ‰‹åŠ¿è¾“å…¥ï¼Œä½¿åŠ¨ä½œä¸æŠ–åŠ¨
                // ä½ç½®å¹³æ»‘
                currentX += (targetX - currentX) * 0.1;
                particleSystem.position.x = currentX;

                // ç¼©æ”¾/æ‰©æ•£å¹³æ»‘
                currentScale += (targetScale - currentScale) * 0.1;
                
                // 3. åŠ¨æ€ç²’å­æ•ˆæœ
                // è·å–ä½ç½®å±æ€§
                const positions = particleSystem.geometry.attributes.position.array;
                
                for(let i = 0; i < particleCount; i++) {
                    // è·å–åŸå§‹ä½ç½®
                    const ox = originalPositions[i*3];
                    const oy = originalPositions[i*3+1];
                    const oz = originalPositions[i*3+2];

                    // æ‰©æ•£å…¬å¼ï¼šä½ç½® = åŸå§‹ä½ç½® * å½“å‰ç¼©æ”¾æ¯”ä¾‹ + å™ªå£°
                    // å¢åŠ ä¸€ç‚¹åŠ¨æ€å‘¼å¸æ„Ÿ
                    const breath = 1 + Math.sin(Date.now() * 0.001 + i) * 0.02;
                    const finalScale = currentScale * breath;

                    positions[i*3] = ox * finalScale;
                    positions[i*3+1] = oy * finalScale;
                    positions[i*3+2] = oz * finalScale;
                }
                particleSystem.geometry.attributes.position.needsUpdate = true;
            }

            renderer.render(scene, camera);
        }

        // çª—å£å¤§å°è°ƒæ•´
        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });

        animate();

    </script>
</body>
